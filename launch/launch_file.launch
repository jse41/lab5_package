<launch>

  <!-- Create an argument to determine whether to use a XACRO or URDF file. 
 <arg name="use_xacro" default="false" /> -->

  <!-- What is the name of the file to use? This can be passed into the launch file. 
  <arg if="$(arg use_xacro)" name="filename" default="robot.xacro" /> 
  <arg unless="$(arg use_xacro)" name="filename" default="robot.urdf" /> -->
  
  
  <!-- Create an argument to determine whether to use a XACRO or URDF file. -->
  <arg name="use_old_xacro" default="false" />

  <!-- Uses old or new xacro file based on user input -->
  <arg if="$(arg use_old_xacro)" name="filename" default="lab4_robot.xacro" />
  <arg unless="$(arg use_old_xacro)" name="filename" default="robot.xacro" />
  
  <!-- The full path of the XACRO file can be passed into the launch file instead.
-->
  <arg name="file" default="$(find lab4_package)/urdf/$(arg filename)" />
  
  <!-- Use the file argument as the name of the file used to set the
/robot_description parameter on the parameter server -->
  <param if="$(arg use_old_xacro)" name="robot_description" command="$(find
xacro)/xacro.py --inorder $(arg file)" />
  <param unless="$(arg use_old_xacro)" name="robot_description" textfile="$(arg file)" />


  <!-- Determines whether to use GUI. --> 
  <arg name="use_gui" default="true" />
    
  <arg if="$(arg use_gui)" name="joint_state_publisher" value="true" />
  <arg unless="$(arg use_gui)" name="joint_state_publisher" value="false" />  
    
  <param if="$(arg use_gui)" name="use_gui" value="true"/>
  <param unless="$(arg use_gui)" name="use_gui" value="false"/> 
    
  <!-- Runs joint state publisher if use_gui is true -->
  <node if="$(arg use_gui)"  pkg="joint_state_publisher" type="joint_state_publisher"
     name="joint_state_publisher" />

  
  <!-- Determines whether to use robot_state_publisher -->
  <arg name="use_robot_state_publisher" default="true" />
    
  <arg if="$(arg use_robot_state_publisher)" name="robot_state_publisher" default="true" />
  <arg unless="$(arg use_robot_state_publisher)" name="robot_state_publisher" default="false" />  
    
  <param if="$(arg use_robot_state_publisher)" name="use_robot_state_publisher" value="true"/>
  <param unless="$(arg use_robot_state_publisher)" name="use_robot_state_publisher" value="false"/>
  
  <!-- Runs robot_state_publisher if use_robot_state_publisher is true -->
  <node if="$(arg use_robot_state_publisher)"  pkg="robot_state_publisher" type="robot_state_publisher"
     name="robot_state_publisher" /> 

  <!-- Run RVIZ and use a specific configuration file. If RVIZ is closed, close
everything. -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find
lab4_package)/config/config.rviz" required="true" />

</launch>
