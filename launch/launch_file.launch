<launch>

 <!-- Create an argument to determine whether to use a XACRO or URDF file. -->
 <arg name="use_xacro" default="false" />

  <!-- What is the name of the file to use? This can be passed into the launch
file. -->
  <arg if="$(arg use_xacro)" name="filename" default="robot.xacro" />
  <arg unless="$(arg use_xacro)" name="filename" default="robot.urdf" />
  
  <!-- The full path of the URDF file can be passed into the launch file instead.
-->
  <arg name="file" default="$(find lab4_package)/urdf/$(arg filename)" />
  
  <!-- Use the file argument as the name of the file used to set the
/robot_description parameter on the parameter server -->
  <param if="$(arg use_xacro)" name="robot_description" command="$(find
xacro)/xacro.py --inorder $(arg file)" />
<param unless="$(arg use_xacro)" name="robot_description" textfile="$(arg file)" />



<!-- STILL NEED GUI TO POP UP -->
   <!-- Determines whether to use GUI and joint state publisher. --> 
    <arg name="use_gui" default="true" />
    
    <arg if="$(arg use_gui)" name="true" default="true" />
  <!-- <arg unless="$(arg use_gui)" name="false" default="false" /> --> 
    
    <!-- Runs joint state publisher if usegui is true -->
    <node if="$(arg use_gui)"  pkg="joint_state_publisher" type="joint_state_publisher"
     name="joint_state_publisher" />
     
    <!-- <param if="$(arg use_gui)" 
     if="$(arg use_xacro)" name="use_gui" command="$(find xacro)/xacro.py --> <!--inorder $(arg file)"
	elseif="$(arg use_xacro)" name="use_gui" command="$(arg file)"/> -->
    
   <param if="$(arg use_gui)" name="use_gui" command="true"/>
    <param unless="$(arg use_gui)" name="use_gui" command="false"/> -->
    
    
    
    <!-- <arg if="$(arg use_gui)" name="filename" default="robot.xacro" />
    <arg unless="$(arg use_gui)" name="filename" default="robot.urdf" /> -->
  
  
  <!-- Publishes to /tf and /tf_static-->
  <node pkg="rostopic" type="rostopic" name="rostopic" args="pub tf tf_static" />

  
  <!-- Run the robot_state_publisher. -->
  <node pkg="robot_state_publisher" type="robot_state_publisher"
name="robot_state_publisher" /> 

  <!-- Run RVIZ and use a specific configuration file. If RVIZ is closed, close
everything. -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find
lab4_package)/config/config.rviz" required="true" />

</launch>
